{
  "name": "apollo-angular-ssr",
  "version": "0.0.0",
  "author": "Kamil Kisiela <kamil.kisiela@gmail.com>",
  "scripts": {
    "start": "npm run ssr",
    "serve": "ng serve",
    "ssr": "npm run build:ssr && npm run serve:ssr",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/server",
    "build:client-and-server-bundles": "ng build --prod && ng run apollo-angular-ssr:server",
    "webpack:server": "webpack --config webpack.server.config.js --progress",
    "watch:server": "ng run apollo-angular-ssr:server --watch",
    "watch:client": "ng build --watch",
    "watch:express": "wait-on ./dist/server/main.js && nodemon --watch src/ -e html,js,scss,css,ts --exec npm run webpack:server",
    "watch": "rimraf dist && concurrently -k -n \"CLIENT,SERVER,EXPRESS\" -c \"blue,green,yellow\" \"npm run watch:client\" \"npm run watch:server\" \"npm run watch:express\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.1.4",
    "@angular/common": "^7.1.4",
    "@angular/compiler": "^7.1.4",
    "@angular/core": "^7.1.4",
    "@angular/forms": "^7.1.4",
    "@angular/http": "^7.1.4",
    "@angular/platform-browser": "^7.1.4",
    "@angular/platform-browser-dynamic": "^7.1.4",
    "@angular/router": "^7.1.4",
    "apollo-server-express": "^2.3.1",
    "apollo-angular": "^1.5.0",
    "apollo-angular-link-http": "^1.4.0",
    "apollo-cache-inmemory": "^1.3.12",
    "apollo-link": "^1.2.6",
    "apollo-client": "^2.4.8",
    "core-js": "2.5.7",
    "graphql": "^0.13.2",
    "graphql-tag": "2.10.0",
    "rxjs": "6.3.3",
    "zone.js": "0.8.26",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.11.4",
    "@angular/cli": "^7.1.4",
    "@angular/compiler-cli": "^7.1.4",
    "@angular/language-service": "^7.1.4",
    "@angular/platform-server": "^7.1.4",
    "@nguniversal/express-engine": "^7.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
    "@types/express": "4.16.0",
    "@types/graphql": "^14.0.3",
    "@types/node": "8.9.4",
    "concurrently": "^4.1.0",
    "rimraf": "^2.6.2",
    "ts-loader": "4.5.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "~3.1.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2"
  }
}
